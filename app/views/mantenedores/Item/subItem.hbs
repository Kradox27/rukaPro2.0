<!-- Page header -->
<div class="page-header page-header-light">
    <div class="page-header-content header-elements-md-inline">
        <div class="page-title d-flex">
            <h4><i class="icon-grid2 mr-2 ml-1"></i> <span class="font-weight-semibold text-bluedark">SubItem del
                    Sistema</span></h4>
            <a href="/" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
        {{#if (eqBool user.habilitado) }}
        <div class="header-elements d-none">
            <div class="d-flex justify-content-center">
                <button id="btnCrear" type="button"
                    class="btn btn-outline btn-sm bg-RukaPro text-RukaPro border-RukaPro d-inline-block">Crear
                    SubItem</button>
            </div>
        </div>
        {{/if}}
    </div>
</div>
<!-- /page header -->

<!-- Begin Page Content -->
<div class="content">
    <!-- Informacion -->
    <div class="card border-bottom-RukaPro">
        <a class="btn btn-light" data-toggle="collapse" href="#info" role="button" aria-expanded="false"
            aria-controls="collapseExample">
            <h4><span class="fa-pull-right"><i class="icon-arrow-down12"></i></span>Información del Item</h4>
        </a>
        <div class="collapse" id="info">
            <div class="card-body border-bottom-info">
                <form autocomplete="off">
                    <div class="row row-lg">
                        <div class="col-sm-12 col-lg-12 center-block">
                            <div class="form-group form-material row d-flex justify-content-center">
                                <div class="col-sm-3">
                                    <label class="col-sm-12 control-label">Comunidad:</label>
                                    <input id="nombreComunidadInfo" type="text" class="form-control" disabled>
                                </div>
                                <div class="col-sm-3">
                                    <label class="col-sm-12 control-label">Item:</label>
                                    <input id="descripcionInfo" type="text" class="form-control" disabled>
                                </div>
                                <div class="col-sm-2">
                                    <label class="col-sm-12 control-label">Tipo Ingreso:</label>
                                    <input id="tipoIngresoInfo" type="text" class="form-control" disabled>
                                </div>
                                <div class="col-sm-2 ">
                                    <label class="col-sm-12 control-label">Estado:</label>
                                    <div id="estadoInfo"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card border-bottom-RukaPro">
        <a class="btn btn-light" data-toggle="collapse" href="#filtro" role="button" aria-expanded="false"
            aria-controls="collapseExample">
            <h4><span class="fa-pull-right"><i class="icon-arrow-down12"></i></span>Filtros</h4>
        </a>
        <div class="collapse" id="filtro">
            <div class="card-body border-bottom-info">
                <form autocomplete="off" id='form-buscar'>
                    <div class="row row-lg">
                        <div class="col-sm-12 col-lg-12 center-block">
                            <form autocomplete="off" id='form-buscar'>
                                <div class="row row-lg">
                                    <div class="col-sm-12 col-lg-12 center-block">
                                        <div class="form-group form-material row d-flex justify-content-center">
                                            <div class="col-sm-2 ">
                                                <label class="col-sm-12 control-label">Estado:</label>
                                                <select id="estadoFiltro" data-plugin="select2"
                                                    class="form-control"></select>
                                            </div>
                                            <div class="col-sm-1">
                                                <br />
                                                <div class="mt-1">
                                                    <button
                                                        class="btn btn-animate btn-animate-vertical bg-RukaPro form-control"
                                                        name="Buscar" type="submit" value="Buscar">
                                                        <span>Buscar <i aria-hidden="true"
                                                                class="fa fa-search"></i></span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Contenido -->
    <div class="card border-bottom-RukaPro" id="tabla-panel">
        <a href="#collapseCardOne"
            class="card-header py-2 d-sm-flex text-RukaPro align-items-center justify-content-between mb-4"
            data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardOne">
            <h5 class="m-0 font-weight-bold text-bluedark d-inline-block">Listado de SubItems</h5>
        </a>
        <div class="card-body border-bottom-info">
            <div class="table-responsive">
                <table class="table table-sm table-striped table-hover" id="tablaDT" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nº</th>
                            <th>Descripcion</th>
                            <th width="10%">Estado</th>
                            <th class="th-sm" width="10%">Acciones</th>
                        </tr>
                        </thread>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{#if (eqBool user.habilitado) }}
<!-- Inicio Modal SubItem-->
<div class="modal fade" id="modal-subItem">
    <div class="container-fluid">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="">
                    <h4 class="modal-title mb-0" id="modal-titulo"></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="form-group text-bluedark">
                        <label>Descripcion:</label>
                        <input id="descripcionSubItem" type="text" class="form-control" name="descripcionSubItem">
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <div class="form-group">
                        <button type="button" class="btn btn-success botonAccion"><i
                                class="fa fa-database"></i>&nbsp;&nbsp;&nbsp;Guardar&nbsp;&nbsp;</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal"><i
                                class="fa fa-clone"></i>&nbsp;&nbsp;&nbsp;Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}

<script nonce="{{nonce}}">
    'use strict'

    var idItem = "{{ idItem }}";

    $(document).ready(function () {
        buscarItem();
        buscarSubItem();
        estadoSelect2N('#estadoFiltro', "");
        $('[data-toggle="tooltip"]').tooltip();
    });

    function buscarItem() {
        $.ajax({
            method: "GET",
            url: "/mantenedor/items/buscarItem/" + idItem,
            dataType: 'json',
            beforeSend: loading()
        })
            .done(function (data) {
                Swal.close();
                if (data.ok) {
                    $('#tipoIngresoInfo').val(data.ok.tipoIngresoNombre)
                    $('#descripcionInfo').val(data.ok.descripcionItem)
                    $('#estadoInfo').html(labelTipoTabla(data.ok.estadoItem))
                    $('#nombreComunidadInfo').val(data.ok.comunidad.nombreComunidad)
                    if (data.ok.estadoItem == "INAC") $('#btnCrear').fadeOut()
                }
                if (data.error) Swal.fire('Error', data.error, 'error');
            })
            .fail(function (jqXHR, textStatus, errorThrown) {
                Swal.close();
                console.log("Error al buscar: ", errorMessage(jqXHR, textStatus, errorThrown))
            })
    }

    function buscarSubItem() {
        $.ajax({
            method: "POST",
            url: "/mantenedor/subItems/buscarSubItemsAll",
            dataType: 'json',
            data: { idItem: idItem },
            beforeSend: loading()
        })
            .done(function (data) {
                Swal.close();
                if (data.ok) {
                    renderTable(data.ok)
                }
                if (data.error) Swal.fire('Error', data.error, 'error');
            })
            .fail(function (jqXHR, textStatus, errorThrown) {
                Swal.close();
                console.log("Error al buscar: ", errorMessage(jqXHR, textStatus, errorThrown))
            })
    }

    $('#form-buscar').submit(function (e) {
        e.preventDefault()
        $.ajax({
            method: "POST",
            url: "/mantenedor/subItems/buscarSubItemsFiltro",
            dataType: 'json',
            data: {
                estado: $("#estadoFiltro").val(),
                idItem: idItem
            },
            beforeSend: loading()
        })
            .done(function (data) {
                Swal.close();
                if (data.ok) renderTable(data.ok)
                if (data.error) Swal.fire('Error', data.error, 'error');
            })
            .fail(function (jqXHR, textStatus, errorThrown) {
                Swal.close();
                console.log("Error al buscar: ", errorMessage(jqXHR, textStatus, errorThrown))
            })
    })

    '{{#if (eqBool user.habilitado) }}'
    $('.modal').on('hidden.bs.modal', () => { $('.modal').find("input").val("").removeClass('invalid'); })

    $("#btnCrear").on('click', () => {
        $('.botonAccion').attr('id', 'agregar');
        $('#modal-titulo').text("Nuevo SubItem").parent().attr('class', 'modal-header bg-RukaPro')
        $('#modal-subItem').modal('show');
    });

    $(document).on('click', '#agregar', () => {
        let validar = true;
        if ($('#descripcionSubItem').val() == "") validar = validarMensaje('#descripcionSubItem', 'Ingrese una Descripción.', 'i');
        if (validar) {
            $.ajax({
                method: 'POST',
                dataType: 'json',
                url: "/mantenedor/subItems/crearSubItem",
                data: {
                    descripcionSubItem: $("#descripcionSubItem").val(),
                    idItem: parseInt(idItem)
                },
                beforeSend: loading()
            })
                .done(function (data) {
                    Swal.close();
                    if (data.ok) {
                        agregarDT('#tablaDT', data.ok);
                        Swal.fire('Éxito', 'SubItems ingresada.', 'success')
                        $('.modal').modal('hide')
                    }
                    if (data.error) Swal.fire('Error', data.error, 'error');
                })
                .fail(function (jqXHR, textStatus, errorThrown) {
                    Swal.close();
                    console.log("Error al crear: ", errorMessage(jqXHR, textStatus, errorThrown))
                })
        }
    });

    $(document).on('click', 'button[name="btnEditar"]', function () {
        let id = $(this).attr("id");
        let row = $('#tablaDT').DataTable().rows().data().toArray().find(e => e.idSubItem == id);
        $('#descripcionSubItem').val(row.descripcionSubItem);

        $('.botonAccion').attr('id', 'editar');
        $('#modal-titulo').text("Editar SubItem").parent().attr('class', 'modal-header bg-primary')
        $('#modal-subItem').data('id', id).modal('show')
    });

    $(document).on('click', '#editar', () => {
        let validar = true;
        if ($('#descripcionSubItem').val() == "") validar = validarMensaje('#descripcionSubItem', 'Ingrese una Descripción.', 'i');
        if (validar) {
            var id = $('#modal-subItem').data('id');
            $.ajax({
                method: 'PUT',
                dataType: 'json',
                url: "/mantenedor/subItems/editarSubItem/" + id,
                data: {
                    descripcionSubItem: $("#descripcionSubItem").val(),
                    idItem: parseInt(idItem)
                },
                beforeSend: loading()
            })
                .done(function (data) {
                    Swal.close();
                    if (data.ok) {
                        $('.modal').modal('hide')
                        Swal.fire('Éxito', data.ok, 'success')
                        editarDT('#tablaDT', id, data.subItem)
                    }
                    if (data.error) Swal.fire('Error', data.error, 'error');
                })
                .fail(function (jqXHR, textStatus, errorThrown) {
                    Swal.close();
                    console.log("Error al editar: ", errorMessage(jqXHR, textStatus, errorThrown))
                })
        }
    });

    $(document).on('click', 'button[name="btnCambiarEstado"]', function () {
        let id = $(this).attr("id");
        var fun = function () {
            $.ajax({
                method: 'GET',
                url: "/mantenedor/subItems/cambiarEstadoSubItem/" + id,
                dataType: 'json',
                beforeSend: loading()
            })
                .done(function (data) {
                    Swal.close();
                    if (data.ok) {
                        editarDT('#tablaDT', id, data.subItem);
                        Swal.fire('Éxito', data.ok, 'success');
                        $('.modal').modal('hide');
                    }
                    if (data.error) swalWithBootstrapButtons.fire('Error', data.error, 'error')
                })
                .fail(function (jqXHR, textStatus, errorThrown) {
                    Swal.close();
                    console.log("Error al cambiar estado: ", errorMessage(jqXHR, textStatus, errorThrown))
                })

        }
        mensajeConfirm(fun, '¿Seguro desea Cambiar el estado de este SubItem?', '', 'warning');
    });
  '{{/if}}'

    function renderTable(datos) {
        $("#tablaDT").dataTable().fnClearTable();
        $("#tablaDT").dataTable().fnDestroy();
        var columnas = [
            { "data": "" },
            { "data": "descripcionSubItem" },
            { "data": "estadoSubItem" },
            { "data": "idSubItem" }
        ];

        var columnaDefs = [
            {
                render: function (data, type, row, meta) { return meta.row + 1; },
                className: "text-center",
                targets: 0
            },
            {
                render: function (data, type, row) { return labelTipoTabla(data); },
                className: "text-center",
                targets: 2
            },
            {
                render: function (data, type, row, meta) {
                    let iconEditar = '';
                    let iconCambiarEstado = '';
                    '{{#if (eqBool user.habilitado) }}'
                    iconEditar = `<button id=${data} type='button' class='btn btn-default' name='btnEditar' data-toggle='tooltip' data-original-title='Editar' data-trigger='hover'><i class='icon-pencil text-primary fa-lg' aria-hidden='true'></i></button>`;
                    iconCambiarEstado = `<button id=${data} type='button' class='btn btn-default' name='btnCambiarEstado' data-toggle='tooltip' data-original-title='Cambiar Estado' data-trigger='hover'><i class='icon-loop3 text-success fa-lg' aria-hidden='true'></i></button>`;
                    '{{/if}}'
                    return iconEditar + iconCambiarEstado;
                },
                width: "15%",
                className: "text-center",
                targets: 3
            }
        ];

        var rowId = function (a) { return a.idSubItem }

        createTableData('#tablaDT', datos, columnas, columnaDefs, rowId);
    }

</script>